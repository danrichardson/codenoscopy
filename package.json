{
  "name": "codenoscopy",
  "version": "2.0.0",
  "private": true,
  "description": "AI-powered code review with personality â€” deployed on Cloudflare Pages",
  "scripts": {
    "dev": "vite",
    "dev:functions": "wrangler pages dev dist --port 8788 --compatibility-date=2024-01-01",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:functions\"",
    "build": "vite build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name=codenoscopy"
  },
  "dependencies": {
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@uiw/react-codemirror": "^4.23.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "rehype-sanitize": "^6.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "concurrently": "^8.2.2",
    "jsdom": "^26.1.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.65.0"
  }
